---
import SendUrlForm from '../../components/es/SendUrlForm.jsx';
import EsLayout from '../../layouts/EsLayout.astro';
import { SITE_ES_TITLE, SITE_ES_DESCRIPTION } from '../../utils/constants';

---

<EsLayout title={SITE_ES_TITLE} description={SITE_ES_DESCRIPTION}>
	<main>
		<SendUrlForm client:only="react"/>
	</main>
</EsLayout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
