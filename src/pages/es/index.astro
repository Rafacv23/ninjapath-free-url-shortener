---
import { changeLanguage } from "i18next";
import Layout from "@/layouts/Layout.astro";
import SendUrlForm from "@/components/react/SendUrlForm";

changeLanguage("es");

let email;
if (Astro.locals.auth().userId) {
    const user = await Astro.locals.currentUser();
    email = user?.emailAddresses.map((email: {
        emailAddress: string;
    }) => email.emailAddress)[0];
}
---

<Layout>
	<SendUrlForm client:only="react" email={email}/>
</Layout>
