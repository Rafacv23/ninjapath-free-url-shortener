---
import { getRelativeLocaleUrl } from "astro:i18n";
import { buttonVariants } from "@/components/ui/button";
import { Globe, History, User } from "lucide-astro";
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";
---

<header class="backdrop-blur-lg backdrop-opacity-60 bg-card flex flex-row justify-between space-x-4 items-center p-4 sticky top-0 z-40 w-full rounded-xl md:mt-4">
    <a href="/" title="Home" class="items-center flex flex-row gap-2">
            <img src="./favicon.avif" alt="Ninja path logo" width="30" />
            <h1 class="font-bold text-base sm:text-xl">Ninja Path</h1>
        </a>
        <div class="flex flex-row gap-2">
            <a href={getRelativeLocaleUrl("es", "/")} class={buttonVariants({variant: "outline"})}>
                <Globe className="h-[1.2rem] w-[1.2rem]" />
                <span class="hidden sm:block">
                    Espa√±ol
                </span>
            </a>
            <SignedOut>
                <SignInButton mode="modal" class={buttonVariants({variant: "outline"})}>
                    <User className="h-[1.2rem] w-[1.2rem]"/>
                    <span class="hidden sm:block">
                        Login
                    </span>
                </SignInButton>
            </SignedOut>
            <SignedIn>
                <a href={getRelativeLocaleUrl("en", "/archive")} class={buttonVariants({variant: "outline"})}>
                    <History className="h-[1.2rem] w-[1.2rem]"/>
                    <span class="hidden sm:block">
                        Created URLs
                    </span>
                </a>
                <UserButton/>
            </SignedIn>
        </div>
</header>